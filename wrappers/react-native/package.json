{
  "name": "@mattrglobal/pairing-crypto-rn",
  "version": "0.1.0",
  "description": "A native module implementation of the 'pairing crypto' crate for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "mattrglobal-pairing-crypto-rn.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "type-check": "tsc --noEmit && yarn example tsc --noEmit",
    "format": "prettier --write '**/*.{js,ts,tsx}'",
    "prepare": "bob build",
    "example": "yarn --cwd example",
    "detox:build": "yarn e2e:build:ios && e2e:build:android",
    "detox:build:ios": "yarn example detox build -c ios",
    "detox:build:android": "yarn example detox build -c android",
    "detox:ios": "yarn example detox test -c ios",
    "detox:ios:ci": "yarn detox:ios --cleanup --record-videos failing",
    "detox:android": "yarn example detox test -c android",
    "detox:android:ci": "yarn detox:android --cleanup --record-videos failing --record-logs all --headless",
    "bootstrap": "yarn install && yarn example && yarn example pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/mattrglobal/pairing-crypto/mattrglobal-pairing-crypto-rn",
  "author": "Tobias Looker <tobias.looker@mattr.global> (https://github.com/mattrglobal/pairing-crypto)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattrglobal/pairing-crypto/mattrglobal-pairing-crypto-rn/issues"
  },
  "homepage": "https://github.com/mattrglobal/pairing-crypto/mattrglobal-pairing-crypto-rn#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "buffer": "5.0.3"
  },
  "devDependencies": {
    "@types/react": "17.0.21",
    "@types/react-native": "0.68.0",
    "prettier": "2.7.1",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-builder-bob": "0.18.3",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  }
}
